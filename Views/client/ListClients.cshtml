@model List<Client>

<h1 class="text-3xl font-bold text-gray-800 mb-4">Gestion des Clients</h1>

<table class="table-auto w-full bg-white shadow rounded">
    <thead>
        <tr class="bg-gray-200">
            <th class="px-4 py-2">Nom</th>
            <th class="px-4 py-2">Prénom</th>
            <th class="px-4 py-2">Téléphone</th>
            <th class="px-4 py-2">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr class="border-t text-center">
                <td class="px-4 py-2">@client.Nom</td>
                <td class="px-4 py-2">@client.Prenom</td>
                <td class="px-4 py-2">@client.Telephone</td>
                <td class="px-4 py-2">
                    <a href="/Commande/ListByClient?clientId=@client.Id" class="text-blue-500">Vue du Client</a>
            </tr>
        }
    </tbody>
</table>